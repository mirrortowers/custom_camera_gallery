<?xml version="1.0" encoding="utf-8"?><!--  res/drawable/edittext_rounded_corners.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true" android:state_pressed="true">
        <shape>
            <solid android:color="@color/black" />
            <stroke android:width="0.5dp" android:color="#FF1C9AAA" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item android:drawable="@android:color/transparent" android:state_focused="false" android:state_pressed="true">
        <shape>
            <solid android:color="@color/black" />
            <stroke android:width="0.5dp" android:color="#FF1C9AAA" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item android:state_focused="true" android:state_pressed="false">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke android:width="0.5dp" android:color="#BDB7B7" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item android:drawable="@color/blue_dark" android:state_focused="false" android:state_pressed="false">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke android:width="0.5dp" android:color="#BDB7B7" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp" />
        </shape>
    </item>

</selector>